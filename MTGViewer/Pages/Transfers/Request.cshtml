@page "{deckId:int}"
@model Transfers.RequestModel
@{
    ViewData["Title"] = $"{Model.Deck.Name} - Requests";
}
@inject SymbolFormatter MtgSymbols


<h1>Requests for @Model.Deck.Name</h1>
<hr />

@if (Model.TargetsExist)
{
    <div class="alert alert-secondary" role="alert">
        <h5 class="alert-heading">Are you sure you want to send requests for the cards below?</h5>
        <p>While a request is active, <strong>you cannot edit @Model.Deck.Name</strong></p>
        <hr>
        <p>
            Requests target cards currently held by other players, meaning
            that <strong>some cards below may not create a trade request</strong>.
        </p>

        <form method="POST">
            <input type="hidden" asp-for="Deck.Id"/>

            <input type="submit" 
                class="btn btn-secondary"
                value="Confirm"/>
        </form>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        There are no possible decks to requests to
    </div>
}


<h2>Cards to Request</h2>

<div class="table-responsive-md">
    <table class="table">
        <thead>
            <tr>
                <th scope="col"> @Html.DisplayNameForInnerType((Amount ca) => ca.Card) </th>
                <th scope="col"> @Html.DisplayNameForInnerType((Card c) => c.ManaCost) </th>
                <th scope="col"> @Html.DisplayNameForInnerType((Amount ca) => ca.NumCopies) </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cardGroup in Model.Requests)
            {
                var card = cardGroup.Cards.First();
                <tr>
                    <td>
                        <a asp-page="/Cards/Details" asp-route-id="@card.Id"
                            title="@card.Name Details">
                            @card.Name </a>
                    </td>

                    <td> 
                        <div class="ms-group">
                            @MtgSymbols.Format(card.ManaCost).ToHtmlString()
                        </div>
                    </td>
                    <td> @cardGroup.NumCopies </td>
                </tr>
            } 
        </tbody>
    </table>
</div>


@if (Model.Deck.Cards.Any())
{
    <h2>Current Cards</h2>

    <div class="table-responsive-md">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"> @Html.DisplayNameForInnerType((Card c) => c.Name) </th>
                    <th scope="col"> @Html.DisplayNameForInnerType((Card c) => c.ManaCost) </th>
                    <th scope="col"> @Html.DisplayNameForInnerType((Card c) => c.SetName) </th>
                    <th scope="col"> @Html.DisplayNameForInnerType((Amount ca) => ca.NumCopies) </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var amount in Model.Deck.Cards)
                {
                    var card = amount.Card;
                    <tr>
                        <td>
                            <a asp-page="/Cards/Details" asp-route-id="@card.Id"
                                title="@card.Name Details">
                                @card.Name </a>
                        </td>

                        <td> 
                            <div class="ms-group">
                                @MtgSymbols.Format(card.ManaCost).ToHtmlString() 
                            </div>
                        </td>
                        <td> @card.SetName </td>
                        <td> @amount.NumCopies </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}