<h2>Pending Trades</h2>

<table class="table">
    <thead>
        <tr>
            <th>Target Deck</th>
            <th>Number of Cards</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <form method="POST">
            @foreach (var (deck, numCards) in Model.PendingTrades)
            {
                <tr>
                    <td>@deck.Name</td>
                    <td>@numCards</td>
                    <td>
                        <a asp-page="./Status" 
                           asp-route-deckid="@deck.Id"
                           class="btn btn-secondary mb-3" >
                           Edit </a>
                    </td>
                </tr>
            }
        </form>

        @foreach (var (deck, numCards) in Model.ReceivedTrades)
        {
            <tr>
                <td>@deck.Name</td>
                <td>@numCards</td>
                <td>
                    <a asp-page="./Review" 
                       asp-route-deckid="@deck.Id"
                       class="btn btn-secondary mb-3">
                       View </a>
                </td>
            </tr>
        }
    </tbody>
</table>


