@page
@model MTGViewer.Pages.Boxes.CreateModel

@{
    ViewData["Title"] = "Create New Box";
}

<h1>Create Box</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Box.Name" class="control-label"></label>
                <input asp-for="Box.Name" class="form-control" />
                <span asp-validation-for="Box.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Box.Bin" class="control-label"></label>

                <select asp-for="Box.BinId" class="form-control mb-3">
                    <option selected>Select Existing</option>
                    @foreach (var bin in Model.Bins)
                    {
                        <option value="@bin.Id">@bin.Name</option>
                    }
                </select>

                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Create New</span>
                    </div>
                    <input asp-for="Box.Bin.Name" class="form-control" />
                </div>

                <span asp-validation-for="Box.Bin" class="text-danger"></span>
            </div>
            <div class="form-group">
            </div>
            <div class="form-group">
            </div>
            <div class="form-group">
                <input type="submit"
                    class="btn btn-secondary"
                    value="Create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}