@inject SignInManager<CardUser> SignInManager
@inject UserManager<CardUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item d-md-none d-block d-lg-block">
        <a title="Manage" id="manage-auto" class="nav-link text-dark"
            asp-area="Identity" asp-page="/Account/Manage/Index">
            Hello @UserManager.GetDisplayName(User)! </a>
    </li>
    <li class="nav-item d-md-block d-none d-lg-none">
        <a title="Manage" id="manage-md" class="nav-link text-dark"
            asp-area="Identity" asp-page="/Account/Manage/Index">
            Account </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" method="post" asp-area="Identity" asp-page="/Account/Logout">
            @{ string? returnUrl = Url.Page("/Index", new { area = "" }); }

            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <button title="Logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
