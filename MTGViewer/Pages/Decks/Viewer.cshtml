@page
@using MTGViewer.Data
@model MTGViewer.Pages.Decks.ViewerModel

@{
    ViewData["Title"] = $"{Model.Deck.Name} Viewer";
}


<h2>@Model.Deck.Owner.Name's @Model.Deck.Name</h2>
<hr />

@if (Model.IsOwner)
{
    <div class="mb-3">
        @if (!Model.Deck.TradesTo.Any())
        {
            <a asp-page="Builder"
                asp-route-id="@Model.Deck.Id"
                class="btn btn-secondary" >
                Edit</a>
        }

        <a asp-page="History"
            asp-route-deckid="@Model.Deck.Id"
            class="btn btn-secondary" >
            History </a>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameForInnerType((CardAmount ca) => ca.Card) </th>
            <th> @Html.DisplayNameForInnerType((Card c) => c.ManaCost) </th>
            <th> @Html.DisplayNameForInnerType((Card c) => c.SetName) </th>
            <th> Current Amount </th>
            <th> Take Requests </th>
            <th> Return Requests </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model.Cards)
        {
            <tr>
                <td>
                    <a asp-page="/Cards/Details"
                       asp-route-id="@group.CardId"
                       class="fw-bold">
                       @group.Card.Name </a>
                </td>
                <td>
                    @foreach (var cost in group.Card.GetManaSymbols())
                    {
                        <span class="m-1 ms ms-@cost ms-cost"></span>
                    }
                </td>
                <td> @group.Card.SetName </td>
                <td> @(group.Actual?.Amount ?? 0) </td>
                <td> @(group.Take?.Amount ?? 0) </td>
                <td> @(group.Return?.Amount ?? 0) </td>
            </tr>
        }
    </tbody>
</table>