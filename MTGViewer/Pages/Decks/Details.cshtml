@page "{id:int}"
@model Decks.DetailsModel
@{
    ViewData["Title"] = $"{Model.Deck.Name} - Details";
}
@inject SymbolFormatter MtgSymbols


<h1>@Model.Deck.Owner.Name's @Model.Deck.Name</h1>

@if (Model.IsOwner)
{
    <div class="btn-group mb-3" role="group">
        @if (Model.Deck.TradesTo.Any())
        {
            <button class="btn btn-secondary" type="button" disabled> Edit </button>
        }
        else
        {
            <a href="/Decks/Craft/@Model.Deck.Id"
                class="btn btn-secondary" role="button">
                Edit </a>
        }

        <a asp-page="History" asp-route-id="@Model.Deck.Id"
            class="btn btn-secondary" role="button">
            History </a>

        <a asp-page="Delete" asp-route-id="@Model.Deck.Id"
            class="btn btn-danger" role="button">
            Delete </a>
    </div>
}

<div class="table-responsive-md">
    <table class="table">
        <thead>
            <tr>
                <th scope="col"> @Html.DisplayNameForInnerType((Amount ca) => ca.Card) </th>
                <th scope="col"> @Html.DisplayNameForInnerType((Card c) => c.ManaCost) </th>
                <th scope="col"> @Html.DisplayNameForInnerType((Card c) => c.SetName) </th>
                <th scope="col"> Cards In Deck </th>
                <th scope="col"> Take Requests </th>
                <th scope="col"> Return Requests </th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Cards.Any())
            {
                <tr>
                    <td> -- </td>
                    <td> -- </td>
                    <td> -- </td>
                    <td> -- </td>
                    <td> -- </td>
                    <td> -- </td>
                </tr>
            }
            @foreach (var group in Model.Cards)
            {
                <tr>
                    <td>
                        <component type="typeof(HoverCard)" render-mode="Static"
                            param-Target="group.Card"/>
                    </td>
                    <td> 
                        <div class="ms-group">
                            @MtgSymbols.Format(group.Card.ManaCost).ToHtmlString() 
                        </div>
                    </td>
                    <td> @group.Card.SetName </td>

                    <td> @(group.Amount?.NumCopies ?? 0) </td>
                    <td> @(group.Want?.NumCopies ?? 0) </td>
                    <td> @(group.GiveBack?.NumCopies ?? 0) </td>
                </tr>
            }
        </tbody>
    </table>
</div>