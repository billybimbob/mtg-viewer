@page "{id}"
@model Cards.DeleteModel
@{
    ViewData["Title"] = "Delete";
}
@inject SymbolFormatter MtgSymbols


<h1>Delete @(Model.Card.Name)</h1>

<hr />
<div class="alert alert-warning" role="alert">
    <h5 class="alert-heading">Are you sure you want to delete this card?</h5>
    <p>
        Deleting this card will also affect locations that 
        are currently holding the card
    </p>
    <form method="POST">
        <div class="btn-group" role="group">
            <!-- js hack -->
            <a href="javascript:history.go(-1)"
                class="btn btn-secondary"
                role="button">
                Back </a>

            <input type="hidden" asp-for="Card.Id" class="sr-only"/>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>
</div>


@(await Html.PartialAsync("_CardPartial", Model.Card))