{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/MtgViewer/MtgViewer.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "drop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "database",
        "drop",
        "--project",
        "MtgViewer",
        "--context",
        "${input:context}"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "migrate",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "migrations",
        "add",
        "${input:migration}",
        "--project",
        "MtgViewer",
        "--context",
        "${input:context}"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/MtgViewer/MtgViewer.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "remove",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "migrations",
        "remove",
        "--project",
        "MtgViewer",
        "--context",
        "${input:context}"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "update",
      "command": "dotnet",
      "type": "process",
      "args": [
        "ef",
        "database",
        "update",
        "--project",
        "MtgViewer",
        "--context",
        "${input:context}"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/MtgViewer.csproj",
        "--project",
        "MtgViewer",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    }
  ],
  "inputs": [
    {
      "id": "context",
      "type": "pickString",
      "description": "Which database context do you want to modify?",
      "options": [
        "CardDbContext",
        "UserDbContext"
      ],
      "default": "CardDbContext",
    },
    {
      "id": "migration",
      "type": "promptString",
      "description": "Enter the name of the migration",
      "default": "NewMigration"
    }
  ]
}