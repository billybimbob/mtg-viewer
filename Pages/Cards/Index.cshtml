@page
@model MTGViewer.Pages.Cards.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-dark"> Create New </a>
</p>

<form method="post">
    <label asp-for="Search.Name" class="control-label"></label>
    <input asp-for="Search.Name"/>
    <input type="submit" value="Filter" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Cards[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cards[0].ManaCost)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cards[0].Cmc)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cards[0].Rarity)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cards[0].SetName)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cards[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cards[0].Power)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cards[0].Toughness)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cards[0].Loyalty)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cards[0].Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var card in Model.Cards) {
        <tr>
            <td>
                @Html.DisplayFor(_ => card.Name)
            </td>

            <td>
            @foreach (var cost in card.GetColorSymbols()) {
                <i class="ms ms-@cost.ToLower() ms-cost"></i>
            }
            </td>
            
            <td>
                @Html.DisplayFor(_ => card.Cmc)
            </td>
            <td>
                @Html.DisplayFor(_ => card.Rarity)
            </td>
            <td>
                @Html.DisplayFor(_ => card.SetName)
            </td>
            <td>
                @Html.DisplayFor(_ => card.Artist)
            </td>
            <td>
                @Html.DisplayFor(_ => card.Power)
            </td>
            <td>
                @Html.DisplayFor(_ => card.Toughness)
            </td>
            <td>
                @Html.DisplayFor(_ => card.Loyalty)
            </td>
            <td>
                @Html.DisplayFor(_ => card.Location)
            </td>
            <td>
                @* <a asp-page="./Edit" asp-route-id="@card.Id">Edit</a> | *@
                <a asp-page="./Details" asp-route-id="@card.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@card.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
