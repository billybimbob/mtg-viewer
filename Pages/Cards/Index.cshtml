@page
@model MTGViewer.Pages.Cards.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].ManaCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Cmc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Rarity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].SetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Power)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Toughness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Loyalty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cards) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
            @foreach (var cost in item.GetColorSymbols()) {
                <i class="ms ms-@cost.ToLower() ms-cost"></i>
            }
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Cmc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rarity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Power)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Toughness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loyalty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
